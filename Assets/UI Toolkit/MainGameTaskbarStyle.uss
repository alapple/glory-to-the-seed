.button {
    transition-duration: 0.35s;
    overflow: visible;
}

.button:hover {
    transition-duration: 0.35s;
    scale: 1.1 1.1;
}

/* Hide info images inside buttons by default */
.button > Image {
    display: none;
}

/* Show info images on hover */
.button:hover > Image {
    display: flex;
}
