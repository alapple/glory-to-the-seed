.button {
    transition-duration: 0.35s;
    overflow: visible;
}

.button:hover {
    transition-duration: 0.35s;
    scale: 1.1 1.1;
}

.button > Image {
    display: none;
}

.button:hover > Image {
    display: flex;
}

.button2 {
    margin-top: 17px;
    position: relative;
    align-self: flex-start;
    justify-content: flex-start;
    translate: 0 221px;
}
